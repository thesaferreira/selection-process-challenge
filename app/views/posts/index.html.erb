<div class="container posts">
  <div class="row">
  <p id="notice"><%= notice %></p>
    <div class="col-12 text-center">
      <% @posts.each do |post| %>
          <div class="post-container shadow-sm mb-4 py-4 rounded">
            <h2 class="post-title" onclick="location.href='<%= post_path(post) %>'">
              <%= post.title %>
            </h2>
            <p><%= post.body.first(20) %>...</p>
            <small><%= time_ago_in_words post.created_at %> atr√°s</small>
            <p><small>Por: <%= post.user.name %></small></p>

            <% if post.user == current_user %>
              <%= link_to 'Editar', edit_post_path(post), class: 'edit-post-link' %>
              <br>
              <%= link_to 'Remover', post, method: :delete,
              data: { confirm: 'Are you sure?' }, class: 'delete-post-link' %>
            <% end %>
          </div>
      <% end %>

      <div class="pagy-links d-flex justify-content-center pt-4">
        <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
      </div>
    </div>
    
  </div>
</div>



<br>

<% if user_signed_in? %>
  <%= link_to 'New Post', new_post_path %>
<% end %>
