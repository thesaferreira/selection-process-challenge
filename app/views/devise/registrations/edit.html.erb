<div class="container auth-form">
  <div class="row mt-4 align-items-center justify-content-center">
    <h1 class="post-main-title">Editar usuário</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
     html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group py-2">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Aguardando confirmação de: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group py-2">
        <%= f.label :password %> <i>(deixe em branco caso não queira alterar)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> caracteres, no mínimo</em>
        <% end %>
      </div>

      <div class="form-group py-2">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="form-group py-2">
        <%= f.label :current_password %> <i>(precisamos da sua senha atual para efetivar as mudanças)</i>
        <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
      </div>

      <div class="actions py-2">
        <%= f.submit "Salvar", class: 'btn btn-primary w-100' %>
      </div>
    <% end %>
  </div>

  <div class="row mt-4 pb-5">
    <hr>
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#removeUserModal">
      Cancelar conta
    </button>

    <!-- Modal -->
    <div class="modal fade" id="removeUserModal" tabindex="-1" aria-labelledby="removeUserModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="removeUserModalLabel">Excluir usuário</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            Atenção! Esta é uma versão irreversível.
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
            <button type="button" class="btn btn-danger">
              <%= link_to 'Cancelar minha conta', registration_path(resource_name), method: :delete, class: 'text-white' %>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
